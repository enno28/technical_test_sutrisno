@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap");

body
    width 100%
    margin 0
    background #FFFAE6
    font-family: Montserrat;

.container
    width 100%
    height 550px

.content
    width 1100px
    height 550px
    margin-top 55px
    margin-bottom 95px
    margin-left 50px
