body
    width 100%
    margin 0
    background #FFFAE6
    font-family Montserrat

.container
    width 100%
    height 550px

//XL
@media screen and (min-width: 1200px)
    .content
        width 1100px
        height 550px
        margin-top 55px
        margin-bottom 95px
        margin-left 50px
        margin-right 50px
        background #FFFFFF
        box-shadow 2px 10px 20px rgba(255, 138, 0, 0.1)
        border-radius 4px
//LG
@media screen and (min-width: 992px) and (max-width: 1199.98px)
    .content
        width 100%
        background blue

//MD
@media screen and (min-width: 768px) and (max-width: 991.98px)
    .content
        width 100%
        background green

//SM
@media screen and (min-width: 576px) and (max-width: 767.98px)
    .content
        width 100%
        background yellow

//XS
@media screen and (max-width: 575.98px)
    .content
        width 100%
        background red